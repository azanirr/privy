<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-xs-10 body">
			<h2 class="text-center py-4 brand-color">Register an Account</h2>
			<form action="http://pretest-qa.dcidev.id/api/v1/register" method="POST" class="mt-5">
				<div class="form-group mx-5">
					<input class="form-control" type="text" name="phone" placeholder="Your phone number">
				</div>
				<div class="form-group mx-5">
					<input class="form-control" type="password" name="password" placeholder="password">
				</div>
				<div class="form-group mx-5">
					<input class="form-control" type="text" name="country" placeholder="country">
				</div>
				<div class="form-group mx-5">
					<input class="form-control" type="text" name="latlong" placeholder="Your address">
				</div>
				<div class="form-group mx-5">
					<input class="form-control" type="text" name="device_token" placeholder="device_token">
				</div>
				<div class="form-group mx-5">
					<select name="device_type">
  						<option value="0">Ios</option>
  						<option value="1">Android</option>
						<option value="2">Web</option>
					</select>
				</div>
				<div class="form-group mx-5">
				<button href="/otp" class="btn btn-lg btn-primary btn-block">Submit</button>
				<a href="/">Go Back</a>
				<a class="pull-right" href="/login">Login</a>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>